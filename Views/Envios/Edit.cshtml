@model DAS_Grupo09_ProyectoFase2.Models.Envio
@{
    ViewData["Title"] = "Editar Envío";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fas fa-edit"></i> Editar Envío #@Model.Id</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="IdPaquete" class="form-label"></label>
                            <select asp-for="IdPaquete" class="form-select" asp-items="ViewBag.Paquetes"></select>
                            <span asp-validation-for="IdPaquete" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Origen" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-map-marker-alt text-success"></i>
                                    </span>
                                    <input asp-for="Origen" class="form-control" />
                                </div>
                                <span asp-validation-for="Origen" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Destino" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-map-marker-alt text-danger"></i>
                                    </span>
                                    <input asp-for="Destino" class="form-control" />
                                </div>
                                <span asp-validation-for="Destino" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EstadoEnvio" class="form-label"></label>
                            <select asp-for="EstadoEnvio" class="form-select" asp-items="ViewBag.Estados">
                                <option value="Pendiente">Pendiente</option>
                                <option value="En tránsito">En tránsito</option>
                                <option value="Entregado">Entregado</option>
                                <option value="Retrasado">Retrasado</option>
                            </select>
                            <span asp-validation-for="EstadoEnvio" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaSalida" class="form-label"></label>
                                <input asp-for="FechaSalida" class="form-control" type="datetime-local" />
                                <small class="text-muted">Opcional</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaEntrega" class="form-label"></label>
                                <input asp-for="FechaEntrega" class="form-control" type="datetime-local" />
                                <small class="text-muted">Opcional</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observaciones" class="form-label"></label>
                            <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Actualizar Envío
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

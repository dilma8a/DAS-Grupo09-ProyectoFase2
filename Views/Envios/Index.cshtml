@model IEnumerable<DAS_Grupo09_ProyectoFase2.Models.Envio>

@{
    ViewData["Title"] = "Gestión de Envíos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-shipping-fast"></i> Gestión de Envíos</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nuevo Envío
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Paquete</th>
                                <th>Origen</th>
                                <th>Destino</th>
                                <th>Estado</th>
                                <th>Fecha Salida</th>
                                <th>Fecha Entrega</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@(item.Paquete?.CodigoBarra ?? "N/A")</td>
                                    <td><small>@item.Origen</small></td>
                                    <td><small>@item.Destino</small></td>
                                    <td>
                                        @if (item.EstadoEnvio == "Entregado")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Entregado
                                            </span>
                                        }
                                        else if (item.EstadoEnvio == "En tránsito")
                                        {
                                            <span class="badge bg-info">
                                                <i class="fas fa-truck"></i> En tránsito
                                            </span>
                                        }
                                        else if (item.EstadoEnvio == "Pendiente")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock"></i> Pendiente
                                            </span>
                                        }
                                        else if (item.EstadoEnvio == "Retrasado")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-exclamation-triangle"></i> Retrasado
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.EstadoEnvio</span>
                                        }
                                    </td>
                                    <td>@(item.FechaSalida?.ToString("dd/MM/yyyy") ?? "Sin asignar")</td>
                                    <td>@(item.FechaEntrega?.ToString("dd/MM/yyyy") ?? "Pendiente")</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No hay envíos registrados</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Crear primer envío
                    </a>
                </div>
            }
        </div>
    </div>
</div>

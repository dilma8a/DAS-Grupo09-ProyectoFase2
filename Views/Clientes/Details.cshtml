@model DAS_Grupo09_ProyectoFase2.Models.Cliente
@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-user"></i> Detalles del Cliente</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DUI)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DUI)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Telefono)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Direccion)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaRegistro)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaRegistro)</dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">
                            @if (Model.EstaActivo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </dd>
                    </dl>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a la lista
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
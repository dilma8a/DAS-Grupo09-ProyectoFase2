@model IEnumerable<DAS_Grupo09_ProyectoFase2.Models.Paquete>

@{
    ViewData["Title"] = "Paquetes";
}

<div class="container mt-4">
    <h2>Gestión de Paquetes</h2>
    
    <p>
        <a asp-action="Create" class="btn btn-primary">Registrar Nuevo Paquete</a>
    </p>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Código de Barra</th>
                <th>Peso (kg)</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Fecha Registro</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CodigoBarra</td>
                    <td>@item.Peso</td>
                    <td>@item.Descripcion</td>
                    <td>
                        <span class="badge bg-info">@item.EstadoActual</span>
                    </td>
                    <td>@item.FechaRegistro.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Ver</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

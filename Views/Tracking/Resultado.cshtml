@model DAS_Grupo09_ProyectoFase2.Models.Paquete

@{
    ViewData["Title"] = "Resultado del Rastreo";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="text-center">Información del Paquete</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h4>Código de Rastreo: <strong>@Model.CodigoBarra</strong></h4>
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-4">Estado Actual:</dt>
                        <dd class="col-sm-8">
                            <h5><span class="badge bg-primary">@Model.EstadoActual</span></h5>
                        </dd>
                        
                        <dt class="col-sm-4">Descripción:</dt>
                        <dd class="col-sm-8">@Model.Descripcion</dd>
                        
                        <dt class="col-sm-4">Peso:</dt>
                        <dd class="col-sm-8">@Model.Peso kg</dd>
                        
                        <dt class="col-sm-4">Dimensiones:</dt>
                        <dd class="col-sm-8">@Model.Dimensiones</dd>
                        
                        <dt class="col-sm-4">Fecha de Registro:</dt>
                        <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                    
                    <div class="text-center mt-4">
                        <a asp-action="Index" class="btn btn-primary">Rastrear Otro Paquete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<DAS_Grupo09_ProyectoFase2.Models.ReporteEnvio>

@{
    ViewData["Title"] = "Reporte de Envíos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-alt"></i> Reporte de Envíos</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver al Dashboard
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-filter"></i> Filtros de Búsqueda</h5>
        </div>
        <div class="card-body">
            <form asp-action="Envios" method="get">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Fecha Inicio</label>
                        <input type="date" name="fechaInicio" class="form-control"
                               value="@ViewBag.FechaInicio?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Fecha Fin</label>
                        <input type="date" name="fechaFin" class="form-control"
                               value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Estado</label>
                        <select name="estado" class="form-select">
                            <option value="">Todos</option>
                            <option value="Pendiente">Pendiente</option>
                            <option value="En tránsito">En tránsito</option>
                            <option value="Entregado">Entregado</option>
                            <option value="Cancelado">Cancelado</option>
                        </select>
                    </div>
                </div>
                <div class="mt-3 text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                    <a asp-action="Envios" class="btn btn-secondary">
                        <i class="fas fa-redo"></i> Limpiar
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.Estadisticas != null)
    {
        <div class="card shadow mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-chart-pie"></i> Distribución por Estado</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var est in ViewBag.Estadisticas)
                    {
                        <div class="col-md-3 mb-3">
                            <div class="text-center">
                                <h6>@est.Estado</h6>
                                <h3 class="text-primary">@est.Cantidad</h3>
                                <p class="text-muted">@est.Porcentaje.ToString("F1")%</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">
                <i class="fas fa-table"></i> Resultados
                <span class="badge bg-light text-dark float-end">@Model.Count() registros</span>
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Código</th>
                            <th>Cliente</th>
                            <th>Ruta</th>
                            <th>Estado</th>
                            <th>Fecha Envío</th>
                            <th>Fecha Entrega</th>
                            <th>Días</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>#@item.Id</strong></td>
                                    <td><code>@item.CodigoSeguimiento</code></td>
                                    <td>@item.ClienteNombre</td>
                                    <td>
                                        <small>@item.Origen - @item.Destino</small>
                                    </td>
                                    <td>
                                        @if (item.Estado == "Entregado")
                                        {
                                            <span class="badge bg-success">@item.Estado</span>
                                        }
                                        else if (item.Estado == "En tránsito")
                                        {
                                            <span class="badge bg-info">@item.Estado</span>
                                        }
                                        else if (item.Estado == "Pendiente")
                                        {
                                            <span class="badge bg-warning">@item.Estado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.Estado</span>
                                        }
                                    </td>
                                    <td>@item.FechaEnvio.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (item.FechaEntrega != null)
                                        {
                                            @item.FechaEntrega?.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Pendiente</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@item.DiasTranscurridos días</span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p>No se encontraron resultados</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
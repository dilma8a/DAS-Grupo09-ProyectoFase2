@model IEnumerable<DAS_Grupo09_ProyectoFase2.Models.Reclamo>

@{
    ViewData["Title"] = "Reclamos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-exclamation-triangle"></i> Gestión de Reclamos</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nuevo Reclamo
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Cliente</th>
                            <th>Envío</th>
                            <th>Tipo</th>
                            <th>Estado</th>
                            <th>Fecha Reclamo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@(item.Cliente?.Nombre ?? "N/A")</td>
                                <td>@item.IdEnvio</td>
                                <td>@item.TipoReclamo</td>
                                <td>
                                    @if (item.Estado == "Pendiente")
                                    {
                                        <span class="badge bg-warning">@item.Estado</span>
                                    }
                                    else if (item.Estado == "En revisión")
                                    {
                                        <span class="badge bg-info">@item.Estado</span>
                                    }
                                    else if (item.Estado == "Resuelto")
                                    {
                                        <span class="badge bg-success">@item.Estado</span>
                                    }
                                    else if (item.Estado == "Rechazado")
                                    {
                                        <span class="badge bg-danger">@item.Estado</span>
                                    }
                                </td>
                                <td>@item.FechaReclamo.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@model DAS_Grupo09_ProyectoFase2.Models.Paquete
@{
    ViewData["Title"] = "Registrar Paquete";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-box"></i> Registrar Nuevo Paquete</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CodigoBarra" class="form-label"></label>
                            <input asp-for="CodigoBarra" class="form-control" placeholder="Ej: PKG006-2025" />
                            <span asp-validation-for="CodigoBarra" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Peso" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Peso" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                    <span class="input-group-text">kg</span>
                                </div>
                                <span asp-validation-for="Peso" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Dimensiones" class="form-label"></label>
                                <input asp-for="Dimensiones" class="form-control" placeholder="Ej: 30x20x15 cm" />
                                <span asp-validation-for="Dimensiones" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Ingrese una descripción del contenido"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdCliente" class="form-label"></label>
                            <select asp-for="IdCliente" class="form-select" asp-items="ViewBag.Clientes">
                                <option value="">-- Seleccione un cliente --</option>
                            </select>
                            <span asp-validation-for="IdCliente" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Registrar Paquete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
